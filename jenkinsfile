pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'kube-metrics-monitor'
        DOCKER_REGISTRY = 'jagostinho900'  // Your Docker Hub username
        TAG = 'latest'  // You could replace this with a dynamic version, e.g., BUILD_NUMBER
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/JAgostinho900/KubeMetricsMonitor'
            }
        }
        
        stage('Run Unit Tests') {
            steps {
                script {
                    sh 'go test main_test.go -v'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the code in the repository
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                }
            }
        }
        
        stage('GoLint Code Quality Check') {
            steps {
                script {
                    sh 'golint ./... | tee lint-results.txt' // Run GoLint and save the results
                }
            }
        }

        stage('Tag Docker Image') {
            steps {
                script {
                    // Tag the Docker image with the correct repository and tag
                    sh 'docker tag ${DOCKER_IMAGE} ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${TAG}'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the tagged Docker image to Docker Hub
                    sh 'docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${TAG}'
                }
            }
        }
    }

    post {
        always {
            script {
                // Optional: Clean up Docker images after the pipeline finishes
                sh 'docker system prune -f'
            }
        }
    }
}
